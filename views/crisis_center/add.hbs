<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <legend>{{ legend }}</legend>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    {{#if messages.msg_info}}
                    <div class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h5><i class="icon fas fa-check"></i> Success!</h5>
                        {{messages.msg_info}}
                    </div>
                    {{/if}}
                    {{#if messages.msg_error}}
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h5><i class="icon fas fa-ban"></i> Alert!</h5>
                        {{messages.msg_error}}
                    </div>
                    {{/if}}
                    <form action="/cms/dynamic-pages/crisis-center/add" method="post" class="mb-3"
                        enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="criscen-title">Name</label>
                            <input type="text" class="form-control w-50" id="criscen-title" name="name"
                                placeholder="Rasyhid Doe" required>
                        </div>
                        <div class="form-group mb-4">
                            <label for="criscen-phone">Phone Number</label>
                            <input type="text" class="form-control w-50" id="criscen-phone" name="phone_number"
                                placeholder="0123456789" required>
                        </div>
                        <div class="form-group">
                            <label for="thumbnail">Profile</label>
                            <div class="input-group w-50">
                                <input type="file" id="profile_pic" name="criscen_pic" accept="image/*"
                                    placeholder="photo" required>
                                <p class="text-muted">Gambar dianjurkan berukuran 299x333 pixels</p>
                            </div>
                        </div>
                        <div>
                            <button id="create-btn" type="submit" class="my-auto btn btn-primary mr-3 mb-3"><i
                                    class="fas fa-check mr-1"></i>Create</button>
                            <a class="btn btn-success" href="/cms/dynamic-pages/crisis-center/">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
</div>
<!-- /.container-fluid -->

