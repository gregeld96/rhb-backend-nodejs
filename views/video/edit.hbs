<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <legend>{{ legend }}</legend>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    {{#if messages.msg_info}}
                    <div class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h5><i class="icon fas fa-check"></i> Success!</h5>
                        {{messages.msg_info}}
                    </div>
                    {{/if}}
                    {{#if messages.msg_error}}
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h5><i class="icon fas fa-ban"></i> Alert!</h5>
                        {{messages.msg_error}}
                    </div>
                    {{/if}}
                    <form action="/cms/dynamic-pages/video/edit/{{data.id}}" method="post" class="mb-3"
                        enctype="multipart/form-data">
                        <input type="text" name="title" value="video" hidden>
                        <div class="form-group">
                            <label for="section" class="form-label">Page</label> <br />
                            <select class="form-select" aria-label="Default select" name="section" id="section">
                                {{#selectValueTrue data.section}}
                                <option selected value='sunday'>Sunday School Page</option>
                                {{/selectValueTrue}}
                            </select>
                        </div>
                        <div class="form-group">
                            <video width="320" height="240" controls>
                                <source src="/photos/public/video/{{data.video_file}}" type="video/mp4">
                            </video> <br />
                            <label for="thumbnail">Video</label>
                            <div class="input-group w-50">
                                <input type="file" id="video" name="video" accept="video/mp4" placeholder="video">
                            </div>
                        </div>
                        <div>
                            <button id="create-btn" type="submit" class="my-auto btn btn-primary mr-3 mb-3"><i
                                    class="fas fa-check mr-1"></i>Update</button>
                            <a class="btn btn-success" href="/cms/dynamic-pages/video/">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
</div>
<!-- /.container-fluid -->

