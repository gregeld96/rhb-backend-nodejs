<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <legend>Edit Event {{data.name}}</legend>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    {{#if messages.msg_error}}
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h5><i class="icon fas fa-ban"></i> Alert!</h5>
                        {{messages.msg_error}}
                    </div>
                    {{/if}}
                    <form action="/cms/event/edit/{{data.id}}" method="post" class="mb-3">
                        <div class="form-group">
                            <label for="event-name">Event Name</label>
                            <input type="text" class="form-control w-25" id="event-name" name="event_name"
                                placeholder="Umum" value="{{data.name}}">
                        </div>
                        <div class="form-group">
                            <label class="my-auto mr-3" for="category-title">Category</label>
                            <select class="form-control w-25" aria-label="Default select" id="category-title"
                                name="category_id" required>
                                {{#selectValueTrue data.category_id}}
                                <option selected disabled>Choose the category</option>
                                {{#each categories}}
                                <option value='{{this.id}}'> {{this.title}}</option>
                                {{/each}}
                                {{/selectValueTrue}}
                            </select>
                        </div>
                        <div class="row mb-3">
                            <div class="col-4">
                                <label>Time Start</label><br />
                                <input type="datetime-local" name="time_start" value="{{data.start}}">
                            </div>
                            <div class="col-4">
                                <label>Time End</label><br />
                                <input type="datetime-local" name="time_end" value="{{data.end}}">
                            </div>
                        </div>
                        <div>
                            <button id="create-btn" type="submit" class="my-auto btn btn-primary mr-3 mb-3"><i
                                    class="fas fa-check mr-1"></i>Update</button>
                            {{#ifDepartment session.permission.commission_name 'Penjadwalan'}}
                            <a class="btn btn-success" href="/cms/penjadwalan/{{data.category_id}}">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            {{else}}
                            <a class="btn btn-success" href="/cms/event/">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            {{/ifDepartment}}
                        </div>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->

