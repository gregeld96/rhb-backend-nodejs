<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <legend>List of User Message</legend>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    {{#each data}}
                    <a href="/cms/chat/detail?id={{userId}}">
                        <div class="card">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-10">
                                        <h5 style="color: black">{{username}}</h5>
                                        <p style="color: black">{{message}}</p>
                                    </div>
                                    <div class="col-2 ">
                                        {{#if statusMessage}}
                                        <i class="fas fa-exclamation"></i>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                    {{/each}}
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->