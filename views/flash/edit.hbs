<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <legend>{{ legend }}</legend>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    {{#if messages.msg_info}}
                    <div class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h5><i class="icon fas fa-check"></i> Success!</h5>
                        {{messages.msg_info}}
                    </div>
                    {{/if}}
                    {{#if messages.msg_error}}
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h5><i class="icon fas fa-ban"></i> Alert!</h5>
                        {{messages.msg_error}}
                    </div>
                    {{/if}}
                    <form action="/cms/dynamic-pages/flash/edit/{{data.id}}" method="post" class="mb-3"
                        enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="flash-title">Title</label>
                            <input type="text" class="form-control w-50" id="flash-title" name="title"
                                value="{{data.title}}" placeholder="Live Chat" required>
                        </div>
                        <div class="form-group" id="description">
                            <label for="description">Description</label>
                            <textarea type="text" class="form-control h-50 w-50" name="description"
                                placeholder="Description here..." required>{{data.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <label for="flash-order">Order Position</label>
                            <input type="number" class="form-control w-50" id="flash-order" name="order"
                                value="{{data.order}}" placeholder="1">
                        </div>
                        <div class="form-group">
                            <label for="picture">Image</label><br />
                            <img src="/photos/public/flash-page/{{data.image}}" alt="logo"
                                style="max-width: 200px; max-height: 200px;"> <br />
                            <div class="input-group w-50">
                                <div class="custom-file">
                                    <input type="file" id="picture" name="flash" accept="image/*" placeholder="photo"
                                        >
                                </div>
                            </div>
                        </div>
                        <div>
                            <button id="create-btn" type="submit" class="my-auto btn btn-primary mr-3 mb-3"><i
                                    class="fas fa-check mr-1"></i>Update</button>
                            <a class="btn btn-success" href="/cms/dynamic-pages/flash/">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
</div>
<!-- /.container-fluid -->

