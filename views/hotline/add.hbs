<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <legend>{{ legend }}</legend>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    {{#if messages.msg_info}}
                    <div class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h5><i class="icon fas fa-check"></i> Success!</h5>
                        {{messages.msg_info}}
                    </div>
                    {{/if}}
                    {{#if messages.msg_error}}
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h5><i class="icon fas fa-ban"></i> Alert!</h5>
                        {{messages.msg_error}}
                    </div>
                    {{/if}}
                    <form action="/cms/dynamic-pages/hotline/add" method="post" class="mb-3">
                        <div class="form-group">
                            <label for="hotline-address">Address</label>
                            <input type="text" class="form-control w-50" id="hotline-address" name="address"
                                placeholder="Jalan ....">
                        </div>
                        <div class="form-group">
                            <label for="hotline-city">Kota</label>
                            <input type="text" class="form-control w-50" id="hotline-city" name="city"
                                placeholder="Jakarta Selatan">
                        </div>
                        <div class="form-group">
                            <label for="hotline-code_post">Kode Pos</label>
                            <input type="text" class="form-control w-50" id="hotline-code_post" name="code_post"
                                placeholder="12345">
                        </div>
                        <div class="form-group mb-4">
                            <label for="hotline-hotline">Hotline</label>
                            <input type="text" class="form-control w-50" id="hotline-hotline" name="hotline"
                                placeholder="Senin" required>
                        </div>
                        <div class="form-group">
                            <label for="section" class="form-label">Section</label> <br />
                            <select class="form-select" aria-label="Default select" name="section" id="section">
                                <option value='baptism'>Baptisan</option>
                                <option selected value='home'>Home Page</option>
                                <option value='marriage'>Pernikahan</option>
                                <option value='dedication'>Penyerahan Anak</option>
                            </select>
                        </div>
                        <div>
                            <button id="create-btn" type="submit" class="my-auto btn btn-primary mr-3 mb-3"><i
                                    class="fas fa-check mr-1"></i>Create</button>
                            <a class="btn btn-success" href="/cms/dynamic-pages/hotline/">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
</div>
<!-- /.container-fluid -->

